<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:id="@+id/item_product_card_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">


    <RelativeLayout
            android:id="@+id/item_product_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">


        <TextView
                android:id="@+id/item_product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="@color/grey_585858"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="@string/default_title"/>


        <ImageView
                android:id="@+id/item_product_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_below="@+id/item_product_title"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/no_image"/>

        <ImageView
                android:id="@+id/item_product_added"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/item_product_thumbnail"
                android:layout_marginStart="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher_background"
                android:visibility="gone"/>

        <TextView
                android:id="@+id/item_product_price"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@+id/item_product_thumbnail"
                android:layout_centerInParent="true"
                android:layout_marginEnd="20dp"
                android:maxLines="2"
                android:text="@string/default_price"
                android:textColor="@android:color/black"
                android:textSize="15sp"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>